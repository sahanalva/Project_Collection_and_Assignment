<% provide(:title, @title.split('_').collect(&:capitalize).join(" ")) %>
<h1><%= @title.split('_').collect(&:capitalize).join(" ") %></h1>

<div class="row">
  <div class="col-md-12 ">

    <%= will_paginate %>

    <table class="projects">
      <tr>
        <th width="12%"><%= link_to "Semester", send(@path, :sort => 'year') %></th>
        <th><%= link_to "Title", send(@path, :sort => 'title') %></th>
        <th>Legacy</th>
        <th width="10%">On Campus</th>
        <% if current_user.admin? %>
          <th colspan="3">Admin Panel</th>

          <th width="20%">Last Modified</th>
        <% end %>
      </tr>

      <%= render @projects %>
    </table>

    <%= will_paginate %>

  </div>
</div>